block style 
    style
        include ../static/style.css
block navbar 
    nav#navbar
            ul 
                a(href="/")
                    img(src="static/logo.jpg")#img
                li #[a(href="/").anchor.active#home HOME ]
                li #[a(href="/about").anchor#about ABOUT US ]
                //- li #[a(href="/").anchor#services SERVICES ]
                li #[a(href="/schedule").anchor#classinfo CLASS INFO]
                li #[a(href="/contact").anchor#contact SIGN UP]
block content 
    section#sec1
        div.container(data-aos='fade-right', data-aos-easing='linear', data-aos-duration='800')
            h1#welcome 
                | WELCOME TO DANCE'S WAY
            h2#h2 
                | India's No. 1 Dance Academy
            a(href="/contact")
                button#btn 
                    |REGISTER
    section#sec2 
        h1#mission 
            | OUR MISSION 
        div#card 
            div.cards(data-aos='zoom-in',data-aos-duration='400')
                img(src="/static/1.jpg").poses
                h1  
                    |Dance your way
            div.cards(data-aos='zoom-in',data-aos-duration='1100')
                img(src="/static/2.jpg").poses
                h1
                    |Expert Teaching
                    
            div.cards(data-aos='zoom-in',data-aos-duration='1800')
                img(src="/static/3.jpg").poses
                h1
                    |Dance Perfection         
    section#sec3 
        h1#sponsors 
            | OUR SPONSORS
        div.logos
            img(src="/static/facebook.jpg") 
            img(src="/static/insta.jpg") 
            img(src="/static/wp.jpg") 
            img(src="/static/twitter.jpg")
        
        
        